{
    "image": "python:3.10",
    "postCreateCommand": {
        "pip_config": "pip config --global set global.index-url https://mirrors.aliyun.com/pypi/simple && pip install black"
    },
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "settings": {
            },
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "ms-python.black-formatter"
            ]
        }
    }
}
